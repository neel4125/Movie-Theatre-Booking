        <Button Content="Search" HorizontalAlignment="Left" Margin="480,181,0,0" VerticalAlignment="Top" Width="109" Height="41" Click="Search_Click" FontSize="16"/>
        <Label Content="* Search and Delete by Seat number" HorizontalAlignment="Left" Margin="229,439,0,0" VerticalAlignment="Top" Height="41" Width="446" Background="#00000000" Foreground="#FFFFFDFD" FontSize="20"/>
