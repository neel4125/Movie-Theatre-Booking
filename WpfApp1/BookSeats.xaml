                <ImageBrush/>
            </Label.BorderBrush>
        </Label>
        <Button x:Name="BookSeatsBtn" Content="Add " HorizontalAlignment="Left" Margin="321,180,0,0" VerticalAlignment="Top" Width="109" Height="41" FontSize="16" Click="BookSeatsBtn_Click"/>
        <Button x:Name="btnSeatA1" Content="A1" HorizontalAlignment="Left" Margin="39,207,0,0" VerticalAlignment="Top" Width="45" Height="35"/>
        <Label Content="Enter Customer's Name" HorizontalAlignment="Left" Margin="321,87,0,0" VerticalAlignment="Top" FontSize="16" Width="178" Foreground="White"/>
